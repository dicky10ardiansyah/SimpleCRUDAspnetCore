@model List<SimpleCRUD.Models.Domain.Employee>

@{
}

<h1>Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <td>Email</td>
            <td>Salary</td>
            <td>Date of Birth</td>
            <td>Department</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>$ @employee.Salary</td>
                <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
                <td>@employee.Department</td>
                <td><a href="Employees/View/@employee.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>